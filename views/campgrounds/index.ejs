<%- include('../header') %>

<div class="container" style="margin-top: 15px;">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Snap_site!</h1>
            <h6>view our snaps from all over the world</h6>
            <a class="btn btn-primary btn-medium" href="/campgrounds/new">add new snaps</a>
        </div>
    </header>
    
     <div class="row" style="display: flex; flex-wrap: wrap;">
        <% camp.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6 " style="margin: 10px 0 10px 0px;">
                <div  >
                    <a href="/campgrounds/<%= camp._id %>"><img class="img-thumbnail" style="height: 190px; width: 237px;" src="<%= camp.image  %>" alt=""></a>
                    
                     <div style="width: 237xp;" class="caption">
                        <h4><%= camp.name  %></h4>
                    </div> 
                    <p>
                        <a class="btn btn-info btn-sm" href="/campgrounds/<%= camp._id %>">more info</a>
                    </p>    
                </div>
            </div>
            
         <% } ); %>
    </div>

</div>

<%- include('../footer') %>
